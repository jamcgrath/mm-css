.breadcrumb {
    font-size: var(--body);
    font-weight: var(--regular);
    list-style: 1.5;
    font-family: var(--poppins);
    color: var(--breadcrumb-color, var(--black));
    background-color: var(--breadcrumb-bg, transparent);
    padding: var(--space-1) var(--space-3);
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border-radius: 8px;
    text-decoration: none;   
}
.breadcrumb:hover {
    --breadcrumb-color: var(--grape-hover);
}
.bread-crumb:focus,
.bread-crumb:active,
.bread-crumb.current {
    --breadcrumb-color: var(--white);
    --breadcrumb-bg: var(--grape);
}
.breadcrumb.disabled,
.breadcrumb[aria-disabled="true"] {
    --breadcrumb-color: var(--disabled);
    --breadcrumb-bg: var(--disabled-bg);
    pointer-events: none;
}

